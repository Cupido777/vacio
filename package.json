{
  "name": "odam-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Plataforma de Formación Artística Digital y Rescate de Tradiciones - IPCC Cartagena",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "predeploy": "npm run build",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:firebase": "npm run build && firebase deploy",
    "serve": "npx serve dist -s -l 3000",
    "clean": "rm -rf dist node_modules/.vite",
    "lint": "eslint src --ext .js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "security-audit": "npm audit --audit-level moderate"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "firebase": "^9.17.0",
    "lucide-react": "^0.294.0",
    "react-hook-form": "^7.43.0",
    "swiper": "^9.0.0",
    "react-helmet-async": "^2.0.4"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "vite": "^4.1.0",
    "vite-plugin-pwa": "^0.14.0",
    "vite-plugin-compression": "^0.5.1",
    "gh-pages": "^5.0.0",
    "terser": "^5.16.1",
    "@eslint/js": "^8.56.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^11.2.2",
    "postcss-preset-env": "^8.4.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-gap-properties": "^3.0.5",
    "postcss-logical": "^6.1.0",
    "postcss-dir-pseudo-class": "^7.0.0",
    "cssnano": "^6.0.1"
  },
  "keywords": [
    "cartagena",
    "cultura",
    "musica",
    "patrimonio",
    "educacion",
    "pwa",
    "react",
    "ipcc",
    "odam-app"
  ],
  "author": "Instituto de Patrimonio y Cultura de Cartagena - IPCC",
  "license": "CC-BY-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ipcc-cartagena/odam-app"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ]
}
