rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Archivos públicos de audio (solo lectura)
    match /audios/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Imágenes de perfil (usuario específico)
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Archivos de cursos (solo administradores)
    match /courses/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regla por defecto más restrictiva
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
